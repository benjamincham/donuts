# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_SESSION_TOKEN=your_session_token
AWS_REGION=ap-southeast-1

# AgentCore Gateway Configuration
AGENTCORE_GATEWAY_ENDPOINT=https://xxx.execute-api.us-west-2.amazonaws.com/prod

# AgentCore Memory Configuration
# Resource ID for AgentCore Memory (obtained after CDK deployment)
# Long-term memory enable/disable is controlled per user in the Frontend settings
AGENTCORE_MEMORY_ID=your-memory-id

# Bedrock Configuration
BEDROCK_MODEL_ID=global.anthropic.claude-sonnet-4-5-20250929-v1:0
BEDROCK_REGION=ap-southeast-1

# Debug Configuration
LOG_LEVEL=info
DEBUG_MCP=false

# Tavily Search Configuration
# For local development: API key can be set directly as fallback
# Not needed in deployment as it's retrieved from Secrets Manager
TAVILY_API_KEY=tvly-your-tavily-api-key

# For deployment: Automatically set by CDK
# Runtime retrieves the secret name from Secrets Manager via TAVILY_API_KEY_SECRET_NAME env var
# Uses Secrets Manager in all environments (default/dev/stg/prd)
# Example: TAVILY_API_KEY_SECRET_NAME=agentcore/dev/tavily-api-key

# S3 User Storage Configuration
USER_STORAGE_BUCKET_NAME=your-user-storage-bucket-name

# Sessions Table Configuration
SESSIONS_TABLE_NAME=your-sessions-table-name

# AppSync Events Configuration (for real-time message sync)
# Automatically configured by setup-env during local development
# APPSYNC_HTTP_ENDPOINT=https://xxx.appsync-api.region.amazonaws.com/event
